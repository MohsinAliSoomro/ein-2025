<%- partial("partials/new-public-header.ejs") %>

<style>
  .inner-header-title {
    background-position-y: center !important;
  }
</style>


<body>
  <div class="Loader"></div>
  <div class="wrapper">


    <!-- Title Header Start -->
    <section class="inner-header-title" style="background-image:url(/img/login.jpg);">
      <div class="container">
        <h1>Reset Password</h1>
      </div>
    </section>
    <div class="clearfix"></div>
    <!-- Title Header End -->

    <!-- Tab Section Start -->
    <section class="tab-sec gray">
      <div class="container">
        <div class="col-lg-8 col-md-8 col-sm-12 col-lg-offset-2 col-md-offset-2">
          <div class="new-logwrap">

            <div class="tab-content">

              <div id="employer" class="tab-pane fade in active">
                <form id="reset-password-form">

                  <input type="hidden" name="resetToken" value="<%= resetToken %>" >
                  <div class="form-group">
                    <label>New Password <sup class="text-danger">*</sup></label>
                    <div class="input-with-icon">
                      <input type="password" name='password' id="password" class="form-control" placeholder="Enter new password" required>
                      <i class="theme-cl ti-lock"></i>

                    </div>
                  </div>
                  <div class="form-group">
                    <label>Confirm New Password <sup class="text-danger">*</sup></label>
                    <div class="input-with-icon">
                      <input type="password" id="confirm-password" class="form-control" placeholder="Confirm new password" required>
                      <i class="theme-cl ti-lock"></i>

                    </div>
                  </div>


                  <div class="form-groups">
                    <button type="submit" class="btn btn-primary theme-bg full-width">Submit</button>
                  </div>


                </form>
              </div>


            </div>

          </div>
        </div>
      </div>
    </section>
    <!-- Tab section End -->
    <%-partial("partials/new-public-footer.ejs")%>

    <script src="/js/reset-password.js"></script>
