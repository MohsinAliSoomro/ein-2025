<%- partial("./partials/new-public-header.ejs") %>
<section id="new-jobs">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <p class="text-center">RECENT JOBS</p>
                <h3 class="text-center"><span class="jobs-no">57142</span> AVAILABLE JOBS FOR YOU</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 job-search2">
    			<h3 class="text-left">Search Job Here</h3>
                <form>
                    <div class="row">
                        <div class="col-sm-12">
    						<div class="form-group">
    							<label for="jobkeyword">Keyword</label>
    							<input type="text" name="search" class="form-control" id="jobkeyword" placeholder="Job Keyword or Title" autocomplete="off">    
    						</div>
    					</div>
                    </div>
    				<div class="row">  
    					<div class="col-sm-12">
    						<select class="countries d-none presel-US form-control" id="countryId" >
    						</select>
    					</div>
    				</div>
                   <div class="row">
                        <div class="col-sm-12">
    						<div class="form-group">
    							<label>State</label>
                                <select name="state" class="form-control states" id="stateId">
                                    <option disabled selected hidden>State</option>
                                    <option value="">Select State</option>
                                </select> 
    						</div>
    					</div>	
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
    						<div class="form-group">
    							<label>City</label>
    							<select name="city" class="form-control cities" id="cityId">
    								<option disabled selected hidden>City*</option>
    								<option value="">Select City</option>
    							   </select>    
    						</div>
    					</div>	
                    </div>
                    <center><button type="submit" class="btn btn-find w-100">Search</button></center>
                </form>
            </div>

            <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12 job-listsearch">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <% if(jobList.length > 0){ %>
                        <% for(let i in jobList){ %>
                        <div class="row job-searchresult">
                            <div class="col-lg-3 col-md-3 col-sm-4 text-left">
                                <h6 class="job-result"><strong><%=jobList[i].title%></strong><br><span class="badge badge-success font-size-12"><%=jobList[i].type%></span></h6>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-3">
                                <h6 class="job-result"><%=jobList[i].category%></h6>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-3">
                                <h6 class="job-result"><i class="fa fa-map-marker" aria-hidden="true" style="color:#00aeef;"></i>&nbsp;<%=jobList[i].state%>, <%=jobList[i].country%></h6>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-7 text-center">
                                <h6 class="job-result">Experience:-<%=jobList[i].experience%>yrs</h6>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-3 col-xs-12">
                                <center><a href="/job-detail/<%=jobList[i].id%>" class="btn btn-apply">View Details</a></center>
                            </div>
                        </div>
                        <% } %>
                    <% } else { %>
                        <div class="row job-searchresult">
                            <center>Sorry related jobs are not found</center>
                        </div>
                    <% } %>
            
                        <div class="row">
                            <div class="col-md-12">
                                <nav aria-label="...">
                                    <ul class="pager">
                                        <% if(!previousPage) { %>
                                            <li class="disabled"><a href="javascript:;">Previous</a></li>
                                        <% } else { %>
                                            <li><a href="<%=previousPage%>">Previous</a></li>
                                        <% } %>

                                        <% if(!nextPage) { %>
                                            <li class="disabled"><a href="javascript:;">Next</a></li>
                                        <% } else { %>
                                            <li><a href="<%=nextPage%>">Next</a></li>
                                        <% } %>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<%- partial("./partials/new-public-footer.ejs") %>
<script>
    var selectedState ="<%=filter.state %>";
    var selectedCity ="<%=filter.city %>";
</script>
<script src="//geodata.solutions/includes/countrystatecity.js"></script>
<script src="js/contact.js"></script>
       