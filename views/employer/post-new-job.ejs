                <!-- row -->
                <div class="row mrg-top-30">
                  <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                      <h4>Required Skills*</h4>
                    </div>
                  </div>

                  <div class="hide">
                    <select id="select-skill">
                      <option value="">Skills</option>
                      <% for( let i = 0; i < skillList.length; i++ ) { %>
                      <%const skill = skillList[i]  %>
                      <option><%=skill.name  %></option>
                      <% } %>
                    </select>
                  </div>

                  <div class="col-md-12 col-sm-12 field_wrapper">
                    <div class="row skills no-of-rows">
                      <div class="col-sm-5">
                        <div class="form-group">
                          <select class="multiple-skill form-control name" required>
                            <option value="">Skills</option>
                            <% for( let i = 0; i < skillList.length; i++ ) { %>
                            <%const skill = skillList[i]  %>
                            <option><%=skill.name  %></option>
                            <% } %>
                          </select>
                        </div>
                      </div>
                      <div class="col-sm-5">
                        <input type="number" class="form-control experienceYear" placeholder="Experince in Years" />
                      </div>
                      <div class="col-sm-2">
                        <span class="remove-btn"><a href="javascript:void(0);" class="remove_button"><i class="fa fa-minus"></i></a></span>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-12 col-sm-12">
                    <div class="row">
