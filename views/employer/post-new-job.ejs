            <div class="dashboard-caption-wrap">
              <form id="post-job">

                <!-- row -->
                <div class="row">
                  <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                      <label>Job Titles*</label>
                      <input type="text" class="form-control" name="title" placeholder="Example: Software Engineer, Software Developer" required>
