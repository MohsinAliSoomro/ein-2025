                  <div class="col-md-12 col-sm-12 q_wrapper">
                    <div class="row questions-row">
                      <div class="col-sm-10">
                        <div class="form-group">
                          <input type="text" class="form-control question" value="">
                        </div>
                      </div>
                      <div class="col-sm-2">
                        <span class="q-remove-btn"><a href="javascript:void(0);" class="q-remove-button"><i class="fa fa-minus"></i></a></span>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-12 col-sm-12">
                    <div class="row">
                      <div class="col-sm-10">
                      </div>
                      <div class="col-sm-2">
                        <a href="javascript:void(0);" class="q-add-button" title="Add field"><i class="fa fa-plus"></i></a>
                      </div>
                    </div>
                  </div>

                </div>

                <!-- row -->
                <div class="row mrg-top-30">
                  <div class="col-md-12 col-sm-12">
                    <div class="form-group ">
                      <button id="submit-job" class="btn-savepreview">Publish</button>
                    </div>
                  </div>
                </div>

              </form>
            </div>

          </div>
        </div>
      </div>

    </div>
  </div>
</section>
