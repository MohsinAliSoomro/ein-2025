                <!-- row -->
                <div class="row">
                  <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                      <label>Job Description</label>
                      <textarea class="form-control  height-120" name="description"
                        placeholder="Example: Describe the job roles and responsibilities" required></textarea>
                    </div>
                  </div>
                </div>

                <!-- row -->
                <div class="row">

                  <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                      <label>Job Category*</label>
                      <select id="jb-category" name="category" class="form-control" required>
                        <option value="">Choose Category</option>
                        <option>Accounting Assistant</option>
                        <option>Arts, Design, Media</option>
                        <option>Charity and Voluntary</option>
                        <option>Education and Coachs</option>
                        <option>Finance And Business</option>
                        <option>IT and Computer</option>
                        <option>Banking</option>
                        <option value="others">Others</option>
                      </select>
                      <div class="col-sm-12 other-category hide">
                        <div class="row">
                        <input type="text" class="form-control" name="otherCategory" id="other-category" value="">
                        <a href="javascript:;" id="close-other-category">x</a>
                      </div>
                    </div>
                    </div>
                    
                  </div>

                  <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                      <label>Job Type*</label>
                      <select id="jb-type" name="type" class="form-control" multiple required>
                        <option value="">Job Type</option>
                        <option value="Contract">Contract</option>
                        <option value="Full-Time">Full-Time</option>
                        <option value="Part-Time">Part-Time</option>
                        <option value="Temporary">Temporary</option>
                        <option value="Freelancer">Freelancer</option>
                      </select>
                    </div>
                  </div>

                  <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                      <label>Job Level*</label>
                      <select id="jb-level" name="level" class="form-control" required>
                        <option value="">Select Job Level</option>
                        <option value="Junior">Junior (0-1 Year)</option>
                        <option value="Manager">Manager (1-3 Years)</option>
                        <option value="Senior">Senior (3-6 Years)</option>
                      </select>
                    </div>
                  </div>

                </div>

                <!-- row -->
                <div class="row">

                  <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                      <label> Notice Period (weeks)*</label>
                      <input type="number" class="form-control" name="noticePeriod" value="0" required>
                    </div>
                  </div>

                  <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                      <label>Minimum Experince(Years)*</label>
                      <input type="number" class="form-control" name="experience" value="0" required>
                    </div>
                  </div>


                </div>

