                <!-- row -->
                <div class="row">

                  <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                      <label>Country*</label>
                      <input type="text" value="United States" class="form-control" disabled>
                    </div>
                  </div>
                  <select name="country" id="countryId"
                    class="form-control countries presel-US d-none custom-select input-circle" required disabled autocomplete="off">
                    <option value="">Select Country</option>
                  </select>
                  <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                      <label>State*</label>
                      <select type="text" name="state" id="stateId"
                        class="form-control states custom-select input-circle" required>
                        <option value="">Select State</option>
                      </select>
                    </div>
                  </div>

                  <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                      <label>City*</label>
                      <select type="text" name="city" id="cityId" class="form-control cities custom-select input-circle"
                        required>
                        <option value="">Select city</option>
                      </select>
                    </div>
                  </div>

                  <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="form-group">
                      <label>Zip*</label>
                      <input type="text" class="form-control" name="zip" placeholder="10001" required>
                    </div>
                  </div>

                </div>

                <div class="row">
                  <div class="col-md-6 col-lg-6 colo-sm-12">
                    <div class="row mrg-top-30">
                      <div class="col-md-12 col-sm-12">
                        <div class="form-group">
                          <h4>Work Options</h4>
                        </div>
                      </div>
                    </div>
    
                    <!-- row -->
                    <div class="row">
                      <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="form-group">
                          <label class='settings-label'>Select Remote Work/Work From Home</label>
                          <div class="flex-row flex-row1 justify-content-between mrg-top-10">
                            <label class="custom-radio custom-label">
                              On Site Only
                              <input type="radio" name="workPlace" value="1" checked="checked">
                              <span class="checkmark"></span>
                            </label>
                            <label class="custom-radio custom-label">
                              Work From Home
                              <input type="radio" name="workPlace" value="0">
                              <span class="checkmark"></span>
                            </label>
                          </div>
                          
                        </div>
                        <div class="form-group" id="remote-work-panel">
                          <label class='settings-label'>If Remote work then Select Partial/Fulltime Remote Work</label>
                          <div class="flex-row flex-row1 justify-content-between mrg-top-10">
                            <label class="custom-radio custom-label">
                              Partial remote
                              <input type="radio" name="remoteWork" value="1">
                              <span class="checkmark"></span>
                            </label>
                            <label class="custom-radio custom-label">
                              100 % Remote
                              <input type="radio" name="remoteWork" value="0">
                              <span class="checkmark"></span>
                            </label>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6 col-lg-6 colo-sm-12">
                    <div class="row mrg-top-30">
                      <div class="col-md-12 col-sm-12">
                        <div class="form-group">
                          <h4>Salary</h4>
                        </div>
                      </div>
                    </div>
    
                    <!-- row -->
                    <div class="row">
                      <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="form-group">
                          <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-12">
                              <div class="input-group mrg-top-10">
                                <span class="custom-checkbox padd-r-10">
                                  <input name="salaryHourly" value="1" type="checkbox" id="1" />
                                  <label for="1">an hour</label>
                                </span>
                              </div>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-12">
                              <input type="text" class="form-control" name="hourlyRange" placeholder="hourly based salary" />
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-12">
                              <div class="input-group mrg-top-10">
                                <span class="custom-checkbox padd-r-10">
                                  <input name="salaryYearly" value="1" type="checkbox" id="2" />
                                  <label for="2">a year</label>
                                </span>
                              </div>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-12">
                              <input type="text" class="form-control" name="yearlyRange" placeholder="yearly ased salary" />
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                              <div class="input-group mrg-top-10">
                                <span class="custom-checkbox padd-r-10">
                                  <input name="salaryOpen" value="1" type="checkbox" id="3" />
                                  <label for="3">open</label>
                                </span>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                        
                </div>

                <!-- row -->
                <div class="row mrg-top-30">
                  <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                      <h4>Questions</h4>
                    </div>
